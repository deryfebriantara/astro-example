---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/home/Hero.astro';
import FeaturedDestinations from '../components/home/FeaturedDestinations.astro';
import WhyChooseUs from '../components/home/WhyChooseUs.astro';
---

<Layout
	title="AIT Airways - Your Journey Begins Here"
	description="Experience world-class air travel with AIT Airways. Book flights to over 100 destinations worldwide with exceptional service and comfort."
>
	<Header />

	<main>
		<Hero />
		<WhyChooseUs />
		<FeaturedDestinations />

		<!-- Promotional Banner -->
		<section class="bg-gradient-to-r from-primary-600 to-primary-700 py-16">
			<div class="max-w-screen-xl mx-auto px-4 text-center">
				<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
					Special Offer: Save up to 30% on Selected Routes
				</h2>
				<p class="text-xl text-white/90 mb-8">
					Book now and enjoy incredible savings on your next adventure
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href="/book"
						class="inline-flex items-center justify-center gap-2 bg-white text-primary-600 hover:bg-gray-100 font-semibold px-8 py-3 rounded-lg transition-colors"
					>
						Book Now
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
						</svg>
					</a>
					<a
						href="/destinations"
						class="inline-flex items-center justify-center gap-2 bg-transparent border-2 border-white text-white hover:bg-white hover:text-primary-600 font-semibold px-8 py-3 rounded-lg transition-colors"
					>
						Explore Destinations
					</a>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
