---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
---

<Layout
	title="Online Check-In - AIT Airways"
	description="Check in online for your AIT Airways flight. Save time at the airport with our convenient online check-in service."
>
	<Header />

	<main class="min-h-screen bg-gray-50">
		{/* Hero Section */}
		<section class="bg-gradient-to-r from-primary-600 to-primary-700 py-16">
			<div class="max-w-screen-xl mx-auto px-4 text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
					Online Check-In
				</h1>
				<p class="text-xl text-white/90">
					Skip the queues and check in from the comfort of your home
				</p>
			</div>
		</section>

		{/* Check-In Form */}
		<section class="py-16">
			<div class="max-w-2xl mx-auto px-4">
				<div class="bg-white rounded-xl shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-6">
						Enter Your Booking Details
					</h2>

					<form class="space-y-6">
						{/* Booking Reference */}
						<div>
							<label for="bookingRef" class="block text-sm font-medium text-gray-700 mb-2">
								Booking Reference
							</label>
							<input
								type="text"
								id="bookingRef"
								placeholder="e.g., PF7X9K2"
								class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent uppercase"
								required
							/>
							<p class="text-xs text-gray-500 mt-1">
								6-character booking reference (found in your confirmation email)
							</p>
						</div>

						{/* Last Name */}
						<div>
							<label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
								Last Name
							</label>
							<input
								type="text"
								id="lastName"
								placeholder="As shown on booking"
								class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
								required
							/>
						</div>

						{/* Submit Button */}
						<button
							type="submit"
							class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
							onclick="event.preventDefault(); alert('Check-in feature coming soon! This is a demo.');"
						>
							Continue to Check-In
						</button>
					</form>

					{/* Help Text */}
					<div class="mt-8 pt-6 border-t border-gray-200">
						<h3 class="font-semibold text-gray-900 mb-3">
							Online Check-In Information
						</h3>
						<ul class="space-y-2 text-sm text-gray-600">
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								<span>Online check-in opens 24 hours before departure</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								<span>Select your preferred seat during check-in</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								<span>Download or print your boarding pass</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								<span>Proceed directly to security if you don't have checked baggage</span>
							</li>
						</ul>
					</div>
				</div>

				{/* Alternative Options */}
				<div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
					<div class="bg-white rounded-lg shadow-md p-6 text-center">
						<svg class="mx-auto h-12 w-12 text-primary-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
						</svg>
						<h3 class="font-semibold text-gray-900 mb-2">
							Mobile App
						</h3>
						<p class="text-sm text-gray-600 mb-4">
							Download our app for faster check-in and mobile boarding passes
						</p>
						<button class="text-primary-600 hover:text-primary-700 font-medium text-sm">
							Learn More →
						</button>
					</div>

					<div class="bg-white rounded-lg shadow-md p-6 text-center">
						<svg class="mx-auto h-12 w-12 text-primary-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
						</svg>
						<h3 class="font-semibold text-gray-900 mb-2">
							Airport Kiosks
						</h3>
						<p class="text-sm text-gray-600 mb-4">
							Use our self-service kiosks at the airport
						</p>
						<a href="/about" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
							Find Airports →
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
