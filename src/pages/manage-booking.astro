---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
---

<Layout
	title="Manage Booking - AIT Airways"
	description="View and manage your AIT Airways booking. Change seats, add baggage, or cancel your reservation."
>
	<Header />

	<main class="min-h-screen bg-gray-50">
		{/* Hero Section */}
		<section class="bg-gradient-to-r from-primary-600 to-primary-700 py-16">
			<div class="max-w-screen-xl mx-auto px-4 text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
					Manage Your Booking
				</h1>
				<p class="text-xl text-white/90">
					View, modify, or cancel your reservation
				</p>
			</div>
		</section>

		{/* Manage Booking Form */}
		<section class="py-16">
			<div class="max-w-2xl mx-auto px-4">
				<div class="bg-white rounded-xl shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-6">
						Retrieve Your Booking
					</h2>

					<form class="space-y-6">
						{/* Booking Reference */}
						<div>
							<label for="bookingRef" class="block text-sm font-medium text-gray-700 mb-2">
								Booking Reference
							</label>
							<input
								type="text"
								id="bookingRef"
								placeholder="e.g., PF7X9K2"
								class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent uppercase"
								required
							/>
							<p class="text-xs text-gray-500 mt-1">
								6-character booking reference (found in your confirmation email)
							</p>
						</div>

						{/* Last Name */}
						<div>
							<label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
								Last Name
							</label>
							<input
								type="text"
								id="lastName"
								placeholder="As shown on booking"
								class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
								required
							/>
						</div>

						{/* Submit Button */}
						<button
							type="submit"
							class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
							onclick="event.preventDefault(); alert('Manage booking feature coming soon! This is a demo.');"
						>
							Retrieve Booking
						</button>
					</form>

					{/* Help Text */}
					<div class="mt-8 pt-6 border-t border-gray-200">
						<h3 class="font-semibold text-gray-900 mb-3">
							What You Can Do
						</h3>
						<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
							<div class="flex items-start gap-3">
								<svg class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								<div>
									<p class="font-medium text-gray-900 text-sm">View Itinerary</p>
									<p class="text-xs text-gray-600">Check flight details and times</p>
								</div>
							</div>

							<div class="flex items-start gap-3">
								<svg class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
								</svg>
								<div>
									<p class="font-medium text-gray-900 text-sm">Select Seats</p>
									<p class="text-xs text-gray-600">Choose or change your seat</p>
								</div>
							</div>

							<div class="flex items-start gap-3">
								<svg class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
								</svg>
								<div>
									<p class="font-medium text-gray-900 text-sm">Add Services</p>
									<p class="text-xs text-gray-600">Extra baggage, meals, etc.</p>
								</div>
							</div>

							<div class="flex items-start gap-3">
								<svg class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
								</svg>
								<div>
									<p class="font-medium text-gray-900 text-sm">Update Details</p>
									<p class="text-xs text-gray-600">Change passenger information</p>
								</div>
							</div>

							<div class="flex items-start gap-3">
								<svg class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
								</svg>
								<div>
									<p class="font-medium text-gray-900 text-sm">Change Dates</p>
									<p class="text-xs text-gray-600">Modify travel dates (fees may apply)</p>
								</div>
							</div>

							<div class="flex items-start gap-3">
								<svg class="w-5 h-5 text-red-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
								</svg>
								<div>
									<p class="font-medium text-gray-900 text-sm">Cancel Booking</p>
									<p class="text-xs text-gray-600">Cancel and request refund</p>
								</div>
							</div>
						</div>
					</div>
				</div>

				{/* Additional Information */}
				<div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
					<div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
						<div class="flex gap-3">
							<svg class="w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							<div>
								<h3 class="font-semibold text-blue-900 mb-2">
									Need Help?
								</h3>
								<p class="text-sm text-blue-800 mb-3">
									Our customer service team is available 24/7 to assist with your booking.
								</p>
								<p class="text-sm font-semibold text-blue-900">
									Call: 1-800-AIT-AIRWAYS
								</p>
							</div>
						</div>
					</div>

					<div class="bg-amber-50 border border-amber-200 rounded-lg p-6">
						<div class="flex gap-3">
							<svg class="w-6 h-6 text-amber-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
							</svg>
							<div>
								<h3 class="font-semibold text-amber-900 mb-2">
									Important Notice
								</h3>
								<p class="text-sm text-amber-800">
									Changes made less than 24 hours before departure may incur additional fees. Please review our terms and conditions.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
